# HammerLock AI Environment Configuration
# Copy to .env.local and fill in your keys

NEXT_PUBLIC_BASE_URL=https://hammerlockai.com
NEXT_PUBLIC_GATEWAY_URL=http://127.0.0.1:19001

# Local LLM (tried first — install Ollama from https://ollama.ai then run: ollama pull phi3)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=phi3

# Cloud providers (optional — used as fallback when Ollama is unavailable)
OPENAI_API_KEY=sk-your-key-here
ANTHROPIC_API_KEY=

# Web search
BRAVE_API_KEY=

# Stripe (optional — for billing features)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_CORE_ONETIME=
STRIPE_PRICE_PRO_MONTHLY=
STRIPE_PRICE_TEAMS_MONTHLY=
STRIPE_PRICE_BOOSTER_MONTHLY=
STRIPE_PRICE_POWER_MONTHLY=

# Database (license enforcement)
DATABASE_URL="file:./hammerlock.db"
