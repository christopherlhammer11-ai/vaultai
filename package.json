{
  "name": "vaultai",
  "version": "0.1.0",
  "description": "VaultAI â€” privacy-first AI assistant. Local encryption, zero cloud dependency.",
  "type": "module",
  "author": "Hammer Enterprises",
  "license": "MIT",
  "main": "electron/main.js",
  "bin": {
    "vaultai": "bin/vaultai.js"
  },
  "scripts": {
    "setup": "./scripts/install.sh",
    "lint": "echo 'Add linting later'",
    "test": "echo 'No tests yet' && exit 0",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "electron:dev": "electron .",
    "electron:build": "next build && electron-builder --mac --win",
    "electron:build:mac": "next build && electron-builder --mac",
    "electron:build:win": "next build && electron-builder --win"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@prisma/client": "^5.15.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "lucide-react": "^0.563.0",
    "next": "^14.1.0",
    "openai": "^6.19.0",
    "pdf-parse": "^2.4.5",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "stripe": "^20.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "25.2.2",
    "@types/react": "19.2.13",
    "electron": "^40.4.0",
    "electron-builder": "^26.7.0",
    "prisma": "^5.15.0",
    "typescript": "^5.4.2"
  },
  "build": {
    "appId": "com.vaultai.app",
    "productName": "VaultAI",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "app/**/*",
      "lib/**/*",
      "public/**/*",
      "bin/**/*",
      "templates/**/*",
      "scripts/**/*",
      ".next/**/*",
      "next.config.js",
      "tsconfig.json",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "icon": "public/vaultai-logo.png",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis",
      "icon": "public/vaultai-logo.png"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false
    }
  }
}
