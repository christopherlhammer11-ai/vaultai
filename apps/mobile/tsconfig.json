{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "types": ["react", "react-native"],
    "baseUrl": "./src",
    "paths": {
      "@mobile/*": ["./*"]
    }
  },
  "include": ["App.tsx", "src/**/*"],
  "exclude": ["node_modules"]
}
